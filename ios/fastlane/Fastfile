default_platform(:ios)

platform :ios do
  before_all do
    @api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],
      is_key_content_base64: true
    )
  end

  desc "Sync certificates and provisioning profiles"
  lane :sync_certs do
    match(
      api_key: @api_key,
      readonly: is_ci,
      git_basic_authorization: ENV["MATCH_GIT_BASIC_AUTH"]
    )
  end

  desc "Build release IPA"
  lane :build_release do
    sync_certs

    gym(
      project: "ChromaDMX.xcodeproj",
      scheme: "ChromaDMX",
      configuration: "Release",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "ChromaDMX.ipa",
      include_bitcode: false,
      xcargs: "DEVELOPMENT_TEAM='#{ENV["DEVELOPMENT_TEAM"]}' SKIP_GRADLE_BUILD='#{ENV["SKIP_GRADLE_BUILD"] || "0"}'"
    )
  end

  desc "Upload to TestFlight"
  lane :upload_testflight do
    pilot(
      api_key: @api_key,
      ipa: "./build/ChromaDMX.ipa",
      skip_waiting_for_build_processing: true
    )
  end

  desc "Build and upload to TestFlight"
  lane :release do
    build_release
    upload_testflight
  end
end
